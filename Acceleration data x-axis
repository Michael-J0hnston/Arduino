#include <Wire.h>
#include <MPU6050.h>

MPU6050 mpu;

void setup() {
  Serial.begin(9600);
  Wire.begin();
  mpu.initialize();
}

void loop() {
  // Read acceleration data
  int16_t accX, accY, accZ;
  mpu.getAcceleration(&accX, &accY, &accZ);

  // Convert raw acceleration data to m/s^2
  float accX_mss = accX / 16384.0; // Sensitivity of MPU-6050 for full scale is +/-2g, so 16384 LSB/g

  // Display acceleration data in the serial monitor
  Serial.print("Acceleration (m/s^2): ");
  Serial.println(accX_mss); // Only the acceleration in the x-axis is displayed

  // Wait for a short period before the next measurement is performed
  delay(100);
}
